<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:elevation="8dp"
    android:foreground="?selectableItemBackground"
    card_view:cardBackgroundColor="#ffffff"
    card_view:contentPadding="0.2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="16dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/crops_image"
            android:layout_width="114dp"
            android:layout_height="94dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:adjustViewBounds="true"
            android:scaleType="fitEnd"
            android:src="@drawable/bg" />

        <TextView
            android:id="@+id/crops_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/id"
            android:layout_toStartOf="@+id/id"
            android:text="Crops"
            android:textColor="@android:color/holo_green_dark"
            android:textSize="20dp"
            android:textStyle="normal|bold" />

        <TextView
            android:id="@+id/crops_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/crops_name"
            android:layout_marginRight="8dp"
            android:layout_toLeftOf="@+id/crops_image"
            android:layout_toStartOf="@+id/crops_image"
            android:text="They are useful"
            android:textColor="@color/colorPrimary"
            android:textSize="17dp" />

    </RelativeLayout>
</android.support.v7.widget.CardView>
